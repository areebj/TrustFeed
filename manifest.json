
{
  "manifest_version": 3,
  "name": "Trust Feed Widget (POC)",
  "version": "0.1.0",
  "description": "Inject a feedback widget on any page (POC; no real backend).",
  "action": { "default_popup": "popup.html" },
  "options_page": "options.html",

  "background": {
    "service_worker": "service_worker.js"
  },

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

